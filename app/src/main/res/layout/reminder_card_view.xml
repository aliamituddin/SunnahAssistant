<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.content.Context" />
        <import type="android.view.View" />
        <import type="com.thesunnahrevival.sunnahassistant.utilities.TimeDateUtil"/>

        <variable
            name="reminder"
            type="com.thesunnahrevival.sunnahassistant.data.model.Reminder" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_dimen"
        android:layout_marginEnd="@dimen/default_dimen"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/default_dimen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/prayer_times_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_dimen"
                android:layout_marginBottom="@dimen/margin_dimen"
                android:gravity="center"
                android:src="@drawable/ic_star"
                android:visibility='@{reminder.category.matches(&quot;Prayer&quot;) ? View.VISIBLE : View.INVISIBLE}'
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/reminder_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_dimen"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/toggleButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/prayer_times_icon"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/reminder_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{reminder.reminderName}"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textSize="@dimen/title_text_size"
                    tools:text="Fasting Ayyamul Beidh" />

                <TextView
                    android:id="@+id/reminder_daily_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textSize="18sp"
                    android:visibility="@{reminder.frequency.matches(&quot;Daily&quot;) ? View.VISIBLE : View.GONE}"
                    android:text="@{reminder.frequency + &quot;:- &quot; + TimeDateUtil.formatTimeInMilliseconds(context, reminder.getTimeInMilliSeconds()) }"
                    tools:text="Date" />

                <TextView
                    android:id="@+id/reminder_weekly_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textSize="18sp"
                    android:visibility="@{reminder.frequency.matches(&quot;Weekly&quot;) ? View.VISIBLE : View.GONE}"
                    android:text="@{&quot;Every &quot; + TimeDateUtil.formatDaysFromCustomScheduledDays(reminder.customScheduleDays) + &quot;:-&quot; + TimeDateUtil.formatTimeInMilliseconds(context, reminder.getTimeInMilliSeconds()) }"
                    tools:text="Date" />

                <TextView
                    android:id="@+id/reminder_monthly_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textSize="18sp"
                    android:visibility="@{reminder.frequency.matches(&quot;Monthly&quot;) ? View.VISIBLE : View.GONE}"
                    android:text="@{&quot;Every Month On &quot; + reminder.day + &quot;:-&quot; + TimeDateUtil.formatTimeInMilliseconds(context, reminder.getTimeInMilliSeconds())  }"
                    tools:text="Date" />

                <TextView
                    android:id="@+id/reminder_one_time_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textSize="18sp"
                    android:visibility="@{reminder.frequency.matches(&quot;One Time&quot;) ? View.VISIBLE : View.GONE}"
                    android:text="@{reminder.month &lt; 12  ? &quot;On &quot; + reminder.day + &quot; &quot; + TimeDateUtil.getMonthName(reminder.month) +  &quot; &quot; + reminder.year + &quot;:-&quot; + TimeDateUtil.formatTimeInMilliseconds(context, reminder.getTimeInMilliSeconds()) : &quot;Not Set&quot; }"
                    tools:text="Date" />

                <TextView
                    android:id="@+id/reminder_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textSize="@dimen/default_text_size"
                    android:text="@{reminder.category}"
                    tools:text="Category" />
            </LinearLayout>


            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_dimen"
                android:layout_marginEnd="@dimen/margin_dimen"
                android:layout_marginBottom="@dimen/margin_dimen"
                android:background="@drawable/toggle_selector"
                android:textOff=""
                android:textOn=""
                android:checked="@{reminder.enabled}"
                android:visibility="@{reminder.getTimeInMilliSeconds() == 172800000 ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</layout>

