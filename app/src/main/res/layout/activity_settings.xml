<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <import type="android.view.View" />

        <variable
            name="settingsViewModel"
            type="com.thesunnahrevival.sunnahassistant.viewmodels.SettingsViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/default_dimen"
            android:paddingTop="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen">

            <RelativeLayout
                android:id="@+id/hijri_date_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hijri_settings_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/hijri_date_settings"
                    android:textAppearance="@android:style/TextAppearance.Material.Headline"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hijri_date_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hijri_settings_label"
                    android:layout_alignParentStart="true"
                    android:paddingTop="16dp"
                    android:text="@{settingsViewModel.hijriDateString}"
                    android:textSize="@dimen/default_text_size" />

                <TextView
                    android:id="@+id/change_hijri_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hijri_date_string"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/default_dimen"
                    android:paddingTop="20dp"
                    android:text="@string/change_hijri_date_by"
                    android:textSize="@dimen/default_text_size" />

                <EditText
                    android:id="@+id/hijriOffsetValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hijri_date_string"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/change_hijri_date_label"
                    android:hint="@string/value"
                    android:importantForAutofill="no"
                    android:inputType="numberSigned"
                    android:paddingTop="20dp"
                    android:text="@{settingsViewModel.offSet}"
                    android:textSize="@dimen/default_text_size" />

                <TextView
                    android:id="@+id/minutes_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hijri_date_string"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/hijriOffsetValue"
                    android:paddingTop="20dp"
                    android:text="@string/days_label_hijri"
                    android:textSize="@dimen/default_text_size" />

                <TextView
                    android:id="@+id/hijri_change_error_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/change_hijri_date_label"
                    android:layout_centerInParent="true"
                    android:paddingTop="16dp"
                    android:text="@{settingsViewModel.hijriChangeErrorMessage}"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="14sp"
                    android:visibility="@{settingsViewModel.hijriChangeErrorMessage != null ? View.VISIBLE : View.GONE}" />


                <Button
                    android:id="@+id/change_hijri_date"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/hijri_change_error_messages"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/default_dimen"
                    android:text="@string/change_hijri_date"
                    android:textAllCaps="false" />



                <View
                    android:id="@+id/settings_category_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/change_hijri_date"
                    android:layout_marginTop="@dimen/default_dimen"
                    android:layout_marginBottom="@dimen/default_dimen"
                    android:background="@color/separatorColor" />

            </RelativeLayout>

            <fragment
                android:id="@+id/quick_setup"
                android:name="com.thesunnahrevival.sunnahassistant.views.QuickSetupFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hijri_date_settings" />

            <View
                android:id="@+id/settings_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/quick_setup"
                android:layout_marginTop="@dimen/default_dimen"
                android:layout_marginBottom="@dimen/default_dimen"
                android:background="@color/separatorColor" />

            <CheckBox
                android:id="@+id/nextt_reminder_notification_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_separator"
                android:button="@null"
                android:checked="true"
                android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                android:text="@string/next_reminder_notification" />

        </RelativeLayout>
    </ScrollView>


</layout>