<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_dimen"
        app:behavior_hideable="false"
        app:behavior_peekHeight="90dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <Button
            android:id="@+id/update_prayer_settings"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/prayer_update_message"
            android:layout_centerInParent="true"
            android:text="@string/update_location"
            android:textAllCaps="false" />

        <RadioGroup
            android:id="@+id/prayer_alerts_method_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:layout_marginStart="@dimen/default_dimen"
            android:layout_toEndOf="@id/select_prayer_time_method_label"
            android:paddingTop="@dimen/default_dimen">

            <RadioButton
                android:id="@+id/manual_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manual" />

            <RadioButton
                android:id="@+id/automatic_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/automatic" />

        </RadioGroup>

        <RelativeLayout
            android:id="@+id/setAutoPrayerSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prayer_alerts_method_radio_group"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/default_dimen"
            android:paddingTop="@dimen/default_dimen"
            android:visibility="gone">

            <EditText
                android:id="@+id/location_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_label"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="16dp"
                android:hint="@string/location_hint"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete"
                android:text="@{settingsViewModel.cityName}" />

            <Spinner
                android:id="@+id/calculation_method_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_marginTop="@dimen/default_dimen"
                android:layout_toEndOf="@id/calculation_method_label" />

            <Spinner
                android:id="@+id/asr_method_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calculation_method_label"
                android:layout_marginTop="@dimen/default_dimen"
                android:layout_toEndOf="@id/asr_method_label" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_example_label"
                android:layout_alignParentStart="true"
                android:paddingTop="@dimen/default_dimen"
                android:text="@{settingsViewModel.locationUpdateMessage}"
                android:textSize="14sp"
                android:visibility="@{settingsViewModel.locationUpdateMessage != null ? View.VISIBLE : View.GONE}" />

            <TextView
                android:id="@+id/calculation_method_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_marginTop="@dimen/default_dimen"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/prayer_time_calculation_method"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_city_town_name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/asr_method_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calculation_method_label"
                android:layout_marginTop="@dimen/default_dimen"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/asr_juristic_method"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/city_example_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_edit_text"
                android:layout_alignParentStart="true"
                android:text="@string/city_name_example"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/prayer_time_settings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/prayer_time_settings"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prayer_time_settings_label"
            android:layout_alignParentStart="true"
            android:paddingTop="@dimen/default_dimen"
            android:text="@string/automatic_prayer_settings_info"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/prayer_update_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setAutoPrayerSettings"
            android:layout_centerInParent="true"
            android:text="@{settingsViewModel.prayerUpdateMessage}"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="@{settingsViewModel.prayerUpdateMessage != null ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/select_prayer_time_method_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:layout_alignParentStart="true"
            android:paddingTop="@dimen/default_dimen"
            android:text="@string/add_prayer_time" />

    </RelativeLayout>


    <data>

        <import type="android.view.View" />

        <variable
            name="settingsViewModel"
            type="com.thesunnahrevival.sunnahassistant.viewmodels.SettingsViewModel" />
    </data>
</layout>